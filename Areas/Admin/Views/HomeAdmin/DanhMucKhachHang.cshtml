@model X.PagedList.IPagedList<TKhachHang>
@using ShopAoQuan.Models;
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "DanhMucKhachHang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>DanhMucKhachHang</h1>

<p>
    <a asp-action="ThemKhachHang">Create New</a>
</p>
<p>@TempData["Message"]</p>
<table class="table">
    <thead>
        <tr class="table-warning">
            <th>
                Mã Khách Hàng
            </th>
            <th>
                Tên Khách Hàng
            </th>
            
            <th>
                Ngày Sinh
            </th>
            <th>
                Số Điện Thoại 
            </th>
            <th>
               Địa chỉ 
            </th>
            
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="table-primary">
                <td>
                    @Html.DisplayFor(modelItem => item.MaKhanhHang)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.TenKhachHang)
            </td>
                
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            
            
            <td>
                <a asp-action="SuaKhachHang" asp-route-khachhang="@item.MaKhanhHang">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaKhanhHang">Details</a> |
                    <a asp-action="XoaKhachHang" asp-route-khachhang="@item.MaKhanhHang">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@Html.PagedListPager(Model,page=>Url.Action("DanhMucKhachHang",new {page =page}),new X.PagedList.Web.Common.PagedListRenderOptions(){
    LiElementClasses=new List<String>{"page-item"},
    PageClasses=new List<String> {"page-link"}
})
