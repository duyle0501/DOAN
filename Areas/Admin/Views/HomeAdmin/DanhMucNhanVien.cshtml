@model X.PagedList.IPagedList<TNhanVien>
@using ShopAoQuan.Models;
@using X.PagedList.Mvc.Core
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "DanhMucNhanVien";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>DanhMucNhanVien</h1>

<p>
    <a asp-action="ThemNhanVien">Create New</a>
</p>
<p>@TempData["Message"]</p>
<table class="table">
    <thead>
        <tr class ="table-warning">
            <th>
                Tên Nhân Viên 
            </th>
            <th>
                Ngày Sinh 
            </th>
            <th>
                Số điện thoại 
            </th>
            <th>
                Địa chỉ 
            </th>
            <th>
                CHức vụ 
            </th>
           
            <th>
               Ghi chú 
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="table-primary">
            <td>
                @Html.DisplayFor(modelItem => item.TenNhanVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChucVu)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.GhiChu)
            </td>
            
            <td>
                    <a asp-action="SuaNhanVien" asp-route-khachhang="@item.MaNhanVien">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaNhanVien">Details</a> |
                <a asp-action="XoaNhanVien" asp-route-id="@item.MaNhanVien">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@Html.PagedListPager(Model,page=>Url.Action("DanhMucKhachHang",new {page =page}),new X.PagedList.Web.Common.PagedListRenderOptions(){
    LiElementClasses=new List<String>{"page-item"},
    PageClasses=new List<String> {"page-link"}
})
