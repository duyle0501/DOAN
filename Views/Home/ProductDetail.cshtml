@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
﻿@using ShopAoQuan.Helpers
@model ShopAoQuan.ViewModels.HomeProductDetailViewModel




<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                             src="@Url.Content("../imgDA/"+Model.danhMucSp.AnhDaiDien)" alt="">
                    </div>
                    <div class="product__details__pic__slider owl-carousel">
                        @foreach (var image in Model.anhSps)
                        {
                            <img data-imgbigurl="@Url.Content("../imgDA/"+image.TenFileAnh)"
                                 src="@Url.Content("../imgDA/"+image.TenFileAnh)" alt="">
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@Model.danhMucSp.TenSp</h3>
                    <div class="product__details__rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-half-o"></i>
                        <span>(18 reviews)</span>
                    </div>
                    <div class="product__details__price">@Model.danhMucSp.GiaLonNhat</div>
                    <p>
                        @Model.danhMucSp.GioiThieuSp
                    </p>
                    <form asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.danhMucSp.MaSp">
                    <div class="product__details__quantity">
                        <div class="quantity">
                            <div class="pro-qty">
                                <input type="text" value="1" name="SoLuong">
                            </div>
                        </div>
                    </div>
                    <button class="primary-btn">ADD TO CARD</button>
                    <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>
                    </form>
                    <ul>
                        <li><b>Availability</b> <span>In Stock</span></li>
                        <li><b>Shipping</b> <span>01 day shipping. <samp>Free pickup today</samp></span></li>
                        
                     
                    </ul>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="product__details__tab">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab"
                               aria-selected="true">Chọn size áo </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab"
                               aria-selected="false">Chọn size quần </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab"
                               aria-selected="false">Reviews <span>(1)</span></a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <h6 style="text-align: center;">Cách chọn size áo </h6>
                                <p>
                                    <img src="~/imgDA/cach-chon-size-ao-khoac-nam-chuan-news-469.jpg" />
                                </p>
                               
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-2" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <h6 style="text-align: center;">Size Quần Nam </h6>
                                <p>
                                    <img style="text-align: center;" src="~/imgDA/size-quan-nam-.jpg" />
                                </p>
                              
                            </div>
                        </div>
                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Product Details Section End -->
